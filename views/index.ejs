<div class="modal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"> Write a comment:</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
                <textarea id="comment_val" style="margin: 0 auto; display: flex;" rows="4" cols="40"></textarea> 
        </div>
        <div class="modal-footer">
          <button onclick="myFunction(this)" type="button" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% if (typeof dbArticle != undefined) { %>
    <div class="container">
    <h3 class="table-heading">
        Recent Articles
        <small class="text-muted">about our world</small>
    </h3>
    <% dbArticle.forEach(function(element, i){ %>
        <ul style="margin-bottom: 20px;" class="list-group">
            <a href="<%- element.link %>" target="_blank">
            <li class="list-group-item d-flex justify-content-between">
                <%= element.title %>
            </a>
            <% if (element.saved != true) { %>
            <a href="/saved/<%- element.id %>"><button type="button" id="save" class="btn btn-sm btn-primary">Save Article</button></a>
            <% } else { %>
                <a href="/unsave/<%- element.id %>"><button type="button" id="save" class="btn btn-sm btn-primary">Unsave</button></a>
                <% } %>
            </li>
            <button data-id="<%- element.id %>" onclick="modal(this)" type="button" id ="comment" class="btn btn-sm btn-secondary">Comment</button>
          </ul>
        <% }) %>   
</div>
<% } %>